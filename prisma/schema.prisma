// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id              Int      @id @default(autoincrement())
  brand           String
  model           String
  price           Int
  year            Int
  kilometers      Int
  energy          Energy
  gearbox         Gearbox
  horsePower      Int
  seats           Int
  doors           Int
  imgUrls         String[]
  motorisation    String
  warranty        String
  category        Category
  circulationDate String
  provenance      String
  finition        String
}

enum Category {
  citadine
  eco
  suv
  compacte
  berline
}

enum Gearbox {
  manual
  automatic
}

enum Energy {
  diesel
  essence
  hybride
  electrique
}
